{# templates/mouvement/_modal_filtres.html.twig #}

<dialog id="modale_filtres">
    <div class="modal-filtres-header">
        <h3>
            Filtres de recherche
            <span id="filter-count-badge" class="filter-count-badge" style="display: none;">0</span>
        </h3>
        <button type="button" class="btn-close-filtres" onclick="fermerModaleFiltres()" aria-label="Fermer">
            X
        </button>
    </div>
    
    <form id="form-filtres" class="modal-filtres-body">
        <div class="filter-grid">
            {# Filtre ISBN #}
            <div class="filter-group">
                <label for="filter-isbn">
                    ISBN
                </label>
                <input 
                    type="text" 
                    id="filter-isbn" 
                    name="isbn" 
                    placeholder="Rechercher par ISBN..."
                    autocomplete="off"
                >
            </div>
            
            {# Filtre Auteur #}
            <div class="filter-group">
                <label for="filter-auteur">
                    Auteur
                </label>
                <input 
                    type="text" 
                    id="filter-auteur" 
                    name="auteur" 
                    placeholder="Rechercher par auteur..."
                    autocomplete="off"
                >
            </div>
            
            {# Filtre Personne #}
            <div class="filter-group">
                <label for="filter-user">
                    Personne
                </label>
                <input 
                    type="text" 
                    id="filter-user" 
                    name="user" 
                    placeholder="Nom de la personne..."
                    autocomplete="off"
                >
            </div>
            
            {# Filtre Type (Entrée/Sortie) #}
            <div class="filter-group">
                <label for="filter-type">
                    Type de mouvement
                </label>
                <select id="filter-type" name="type">
                    <option value="">Tous les mouvements</option>
                    <option value="entree">Entrées uniquement</option>
                    <option value="sortie">Sorties uniquement</option>
                </select>
            </div>
            
            {# Filtre Tri #}
            <div class="filter-group full-width">
                <label for="filter-tri">
                    Ordre d'affichage
                </label>
                <select id="filter-tri" name="tri">
                    <option value="DESC"> Plus récents en premier</option>
                    <option value="ASC">Plus anciens en premier</option>
                </select>
            </div>
        </div>

        <hr>
        
        {# Indication #}
        <div class="filter-hint">
            <small>
                <strong>Astuce :</strong> Combinez plusieurs filtres pour affiner votre recherche
            </small>
        </div>
    </form>
    
    <div class="modal-filtres-footer">
        <button type="button" class="btn-effacer-filtres" onclick="reinitialiserFiltres()">
            Effacer les filtres
        </button>
        
        <div class="btn-group">
            <button type="button" class="btn-effacer-filtres" onclick="fermerModaleFiltres()">
                Annuler
            </button>
            <button type="button" class="btn-filtrer" onclick="appliquerFiltres()">
                Appliquer les filtres
            </button>
        </div>
    </div>
</dialog>

{# Affichage des filtres actifs #}
<div id="active-filters-container" class="active-filters"></div>
