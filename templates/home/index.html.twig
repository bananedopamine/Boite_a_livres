{% extends 'base.html.twig' %}

{% block body %}
<div class="container home-container">
    <h1>Gestion de Stock IES</h1>
    <p>Choisissez une action pour commencer le scan.</p>
    
    <nav class="home-nav-menu">

        {# BOUTON ENTRÉE : On passe 'false' pour indiquer que ce n'est PAS une sortie #}
        <button class="btn btn-primary" onclick="ouvrirScan('false')">
            Déposer un livre
        </button>
        {# BOUTON SORTIE : On passe 'true' pour indiquer que c'est une sortie #}
        <button class="btn btn-primary" onclick="ouvrirScan('true')">
            Prendre un livre
        </button>

        <button onclick="window.location.href='{{ path('app_livre_index') }}'" class="btn btn-primary">
            Bibliothèque
        </button>
    </nav>

    {# NOUVEAU : Section suggestion de livre #}
    <div class="suggestion-section">
        <p class="suggestion-text">
            <span class="suggestion-icon"></span>
            Vous ne savez pas quoi choisir ? Laissez-nous décider !
        </p>
        <button class="btn btn-suggestion-home" onclick="initialiserSuggestion()">
            Suggérer un livre
        </button>
    </div>

    {% include 'mouvement/_modal_succes.html.twig' %}

    
</div>
{% endblock %}

{% block javascripts %}
<script>
    const modalePrincipale = document.getElementById('modale_principale');
    let typeActionActuel = 'false'; // Garde en mémoire si c'est Entrée ou Sortie

    /**
     * 1. Ouvre la première modale (le scan ISBN)
     * Et active la détection automatique pour le scanner
     */
    async function ouvrirScan(action) {
    // On stocke si c'est une sortie (true) ou une entrée (false)
    typeActionActuel = action;

    const url = "{{ path('app_mouvement_debut') }}?action=" + action;
    
    try {
        // 1. Charger le contenu HTML dans la modale
        // On attend que chargerModale ait fini de remplir le DOM
        await chargerModale(url);

        // 2. Récupérer les éléments fraîchement injectés
        const inputIsbn = document.getElementById('isbnInput');
        const formScan = document.getElementById('form_scan');

        if (inputIsbn) {
            // Focus automatique pour pouvoir scanner tout de suite
            setTimeout(() => inputIsbn.focus(), 100);

            // ÉCOUTEUR 1 : Détection automatique (Scanner / Douchette)
            // Dès que l'ISBN atteint 10 ou 13 caractères, on lance la vérification
            inputIsbn.addEventListener('input', function(e) {
                const isbn = e.target.value.trim();
                if (isbn.length === 10 || isbn.length === 13) {
                    console.log("ISBN détecté par saisie/scan :", isbn);
                    verifierIsbn(isbn);
                }
            });
        }

        if (formScan) {
            // ÉCOUTEUR 2 : Validation manuelle (Bouton ou touche Entrée)
            formScan.addEventListener('submit', function(e) {
                e.preventDefault(); // Empêche le rechargement de la page
                const isbn = inputIsbn.value.trim();
                if (isbn) {
                    verifierIsbn(isbn);
                }
            });
        }

    } catch (erreur) {
        console.error("Erreur lors de l'ouverture du scan :", erreur);
        alert("Impossible de charger la fenêtre de scan.");
    }
}

    /**
     * 2. ÉCOUTEUR GLOBAL DE SOUMISSION (Le Cerveau)
     * On intercepte tous les formulaires qui apparaissent dans la modale
     */
    document.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formulaire = e.target;
        const actionUrl = formulaire.action;
        const formData = new FormData(formulaire);

        // --- CAS A : Soumission du SCAN ISBN ---
        if (actionUrl.includes('verification') || formulaire.querySelector('#isbnInput')) {
            const isbn = formulaire.querySelector('#isbnInput').value;
            verifierIsbn(isbn);
            return;
        }

        // --- CAS B : Soumission du NOUVEAU LIVRE ou CONFIRMATION ---
        try {
            const reponse = await fetch(actionUrl, {
                method: 'POST',
                body: formData,
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });

            const contentType = await reponse.headers.get('content-type');

            // MODIFICATION : Détection du type de réponse
            if (contentType && contentType.includes('application/json')) {
                // Réponse JSON (ancien comportement)
                const resultat = await reponse.json();
                
                if (resultat.success) {
                    if (resultat.id) {
                        // Si on vient de créer un livre, on passe à la confirmation finale
                        ouvrirConfirmation(resultat.id);
                    } else if (resultat.livre && resultat.nomPrenom) {
                        // Si on a finalisé le mouvement, afficher la modale de succès
                        modalePrincipale.close();
                        afficherModaleSucces(resultat);
                    } else {
                        // Cas de fallback
                        modalePrincipale.close();
                        window.location.reload();
                    }
                }
            } else {
                // Réponse HTML (nouveau comportement)
                const html = await reponse.text();
                document.getElementById('contenu_modale').innerHTML = html;
                
                // Vérifier si c'est un succès (présence de data-success)
                const successElement = document.querySelector('[data-success="true"]');
                if (successElement && successElement.dataset.livreId) {
                    // Auto-trigger la confirmation
                    setTimeout(() => {
                        ouvrirConfirmation(successElement.dataset.livreId);
                    }, 1000);
                }
            }
        } catch (erreur) {
            console.error("Erreur soumission formulaire:", erreur);
        }
    });

    /**
     * 3. Logique de vérification ISBN (Appel API)
     */
    async function verifierIsbn(isbn) {
        try {
            const reponse = await fetch(`/livre/api/verif-isbn/${isbn}`);

            // On regarde ce que le serveur nous a envoyé
            const contentType = reponse.headers.get("content-type");

            if (contentType && contentType.includes("application/json")) {
                // CAS 1 : C'est du JSON (Livre trouvé en base ou Google)
                const resultat = await reponse.json();

                if (resultat.statut === 'existe') {
                    ouvrirConfirmation(resultat.id);
                } else if (resultat.statut === 'google') {
                    ouvrirFormulaireNouveau(resultat.donnees);
                } else if (resultat.statut === 'inconnu') {
                    // AJOUT CRITIQUE : Gérer le livre introuvable
                    console.log('Livre introuvable, ISBN:', resultat.isbn);
                    afficherOptionsCreation(resultat.isbn);
                } else {
                    console.error('Statut inconnu reçu:', resultat.statut);
                }
            } else {
                // CAS 2 : C'est du HTML (Ton template _modal_not_found)
                const html = await reponse.text();
                document.getElementById('contenu_modale').innerHTML = html;
            }
        } catch (erreur) {
            console.error("Erreur lors de la vérification ISBN :", erreur);
        }
    }

    /**
     * 3bis. Affiche le formulaire de choix : API Google ou Saisie Manuelle
     */
    function afficherOptionsCreation(isbn) {
        document.getElementById('contenu_modale').innerHTML = `
            <div style="text-align: center; padding: 20px;">
                <h3 style="color: #d9534f; margin-bottom: 20px;">Livre Introuvable</h3>
                <p style="margin-bottom: 25px;">
                    L'ISBN <strong>${isbn}</strong> n'a pas été trouvé dans notre base de données ni sur l'API Google Books.
                </p>
                
                <div style="display: flex; flex-direction: column; gap: 15px; max-width: 400px; margin: 0 auto;">
                    <button 
                        class="btn btn-primary" 
                        onclick="afficherFormulaireCreationRapide('${isbn}')"
                        style="width: 100%; padding: 15px; font-size: 1rem;">
                        Créer le livre manuellement
                    </button>
                    
                    <button 
                        class="btn btn-secondary" 
                        onclick="ouvrirScan('${typeActionActuel}')"
                        style="width: 100%; padding: 15px; font-size: 1rem;">
                        Rescanner un autre livre
                    </button>
                    
                    <button 
                        class="btn btn-light" 
                        onclick="fermerModale()"
                        style="width: 100%; padding: 12px; font-size: 0.95rem;">
                        ✕ Annuler
                    </button>
                </div>
            </div>
        `;
    }

    /**
     * 3ter. Affiche le formulaire de création rapide
     */
    function afficherFormulaireCreationRapide(isbn) {
        document.getElementById('contenu_modale').innerHTML = `
            <div style="padding: 20px;">
                <h3 style="margin-bottom: 20px;">Création rapide de livre</h3>
                <p style="color: var(--text-light); margin-bottom: 20px;">
                    ISBN : <strong>${isbn}</strong>
                </p>
                
                <form id="form-quick-create" onsubmit="soumettreCreationRapide(event, '${isbn}')">
                    <div class="form-group" style="margin-bottom: 15px;">
                        <label for="titre" style="display: block; margin-bottom: 5px; font-weight: bold;">
                            Titre du livre *
                        </label>
                        <input 
                            type="text" 
                            id="titre" 
                            name="titre" 
                            class="form-control" 
                            required
                            placeholder="Entrez le titre du livre"
                            style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"
                            autofocus
                        >
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="auteur" style="display: block; margin-bottom: 5px; font-weight: bold;">
                            Auteur (optionnel)
                        </label>
                        <input 
                            type="text" 
                            id="auteur" 
                            name="auteur" 
                            class="form-control" 
                            placeholder="Nom de l'auteur"
                            style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"
                        >
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        <label for="genre" style="display: block; margin-bottom: 5px; font-weight: bold;">
                            Genre (optionnel)
                        </label>
                        <input 
                            type="text" 
                            id="genre" 
                            name="genre" 
                            class="form-control" 
                            placeholder="Roman, Essai, Manga..."
                            style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"
                        >
                    </div>

                    <div class="modal-actions" style="display: flex; justify-content: space-between; gap: 10px;">
                        <button type="button" class="btn btn-secondary" onclick="afficherOptionsCreation('${isbn}')" style="flex: 1;">
                            ← Retour
                        </button>
                        <button type="submit" class="btn btn-primary" style="flex: 1;">
                            Créer le livre
                        </button>
                        <button class="btn" onclick="ouvrirScan('${typeActionActuel}')">Réessayer</button>
                        
                    </div>
                </form>
            </div>
        `;
        
        // Focus automatique sur le champ titre
        setTimeout(() => document.getElementById('titre').focus(), 100);
    }

    /**
     * 3quater. Soumet le formulaire de création rapide
     */
    async function soumettreCreationRapide(event, isbn) {
        event.preventDefault();
        
        const form = event.target;
        const titre = form.titre.value;
        const auteur = form.auteur.value;
        const genre = form.genre.value;
        
        const formData = new FormData();
        formData.append('isbn', isbn);
        formData.append('titre', titre);
        formData.append('auteur', auteur);
        formData.append('genre', genre);
        
        try {
            const reponse = await fetch("{{ path('app_livre_creation_manuel') }}", {
                method: 'POST',
                body: formData
            });
            
            const data = await reponse.json();
            
            if (data.success) {
                // Afficher un message de succès temporaire
                document.getElementById('contenu_modale').innerHTML = `
                    <div style="text-align: center; padding: 20px;">
                        <div style="font-size: 48px; color: #5cb85c;">✓</div>
                        <h3 style="color: #5cb85c;">Livre créé avec succès !</h3>
                        <p>Passage à l'étape de confirmation...</p>
                    </div>
                `;
                
                // Passer à la confirmation après 1 seconde
                setTimeout(() => {
                    ouvrirConfirmation(data.id);
                }, 1000);
            } else {
                alert(data.message || 'Erreur lors de la création du livre');
            }
        } catch (erreur) {
            console.error('Erreur:', erreur);
            alert('Une erreur est survenue lors de la création du livre');
        }
    }

    /**
     * 4. Affiche le formulaire de création de livre
     */
    function ouvrirFormulaireNouveau(donnees) {
        const params = new URLSearchParams(donnees).toString();
        const url = "{{ path('app_livre_new') }}?" + params;
        chargerModale(url);
    }

    /**
    * 5. Affiche l'étape finale (Nom/Prénom) en traitant du JSON
    */
    async function ouvrirConfirmation(livreId) {
        const url = `/mouvement/confirmation/${livreId}?type_action=${typeActionActuel}`;
        
        try {
            const reponse = await fetch(url, {
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            const data = await reponse.json();

            if (data.success) {
                const livre = data.livre;
                const couleurAction = data.estSortie ? '#d9534f' : '#5cb85c';
                const labelAction = data.estSortie ? 'SORTIE' : 'ENTRÉE';
                const texteBouton = data.estSortie ? "l'emprunt" : "le retour";
                const classeBouton = data.estSortie ? 'btn-warning' : 'btn-success';

                // On injecte le HTML dynamiquement dans la modale
                document.getElementById('contenu_modale').innerHTML = `
                    <h3>Étape Finale : Confirmation</h3>
                    <div class="book-summary-box" autocomplete="off">
                        ${livre.lienImg ? `<img src="${livre.lienImg}" alt="Couverture" class="img-cover-thumb" onerror="this.src='{{ asset('extras/images/unknown_book.jpg') }}'">` : `<img src="{{ asset('extras/images/unknown_book.jpg') }}" alt="Couverture" class="img-cover-thumb">`}
                        <div>
                            <strong>Titre :</strong> ${livre.titre} <br>
                            <strong>Auteur :</strong> ${livre.auteur} <br>
                            <strong>ISBN :</strong> ${livre.isbn} <br>
                            <strong>Stock actuel :</strong> ${livre.stock}
                        </div>
                    </div>

                    <form action="${data.urlFinaliser}" method="post">
                        <input type="hidden" name="type_action" value="${data.estSortie}">

                        <div class="form-group-modal">
                            <label for="nomPrenom">Votre Nom et Prénom :</label>
                            <input type="text" id="nomPrenom" name="nomPrenom" 
                                placeholder="Qui effectue l'opération ?" required autofocus class="input-full" autocomplete="off">
                        </div>

                        <div class="modal-actions-between">
                            <p style="margin: 0; color: ${couleurAction}; font-weight: bold;">
                                Action : ${labelAction}
                            </p>
                            <button type="submit" class="btn ${classeBouton}">
                                Valider ${texteBouton}
                            </button>
                        </div>
                    </form>
                `;

                if (!modalePrincipale.open) {
                    modalePrincipale.showModal();
                }
                // Focus automatique sur le champ nom
                setTimeout(() => document.getElementById('nomPrenom').focus(), 100);
            }
        } catch (erreur) {
            console.error("Erreur lors de la récupération de la confirmation :", erreur);
        }
    }
</script>

{# Chargement du script de suggestion de livres #}
<script src="{{ asset('js/suggestion_livre_handler.js') }}"></script>

{% endblock %}