<div class="bg-light mb-4">
    <div>
        <h5 class="card-title">Rechercher dans l'inventaire</h5>
        
        <form action="{{ path('app_livre_search') }}" method="get" class="row g-3">
            
            {# Filtre par ISBN #}
            <div class="col-md-5">
                <label for="isbn" class="form-label">Num√©ro ISBN</label>
                <input type="text" 
                       name="isbn" 
                       id="isbn" 
                       class="form-control" 
                       placeholder="Ex: 9782..." 
                       value="{{ last_isbn|default('') }}"
                       autocomplete="off">
            </div>

            {# Filtre par Auteur #}
            <div class="col-md-5">
                <label for="auteur" class="form-label">Auteur</label>
                <input type="text" 
                       name="auteur" 
                       id="auteur" 
                       class="form-control" 
                       placeholder="Nom de l'auteur..." 
                       value="{{ last_auteur|default('') }}"
                       autocomplete="off">
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <div class="btn-group w-100">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                    
                    <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                        <button type="submit" class="btn btn-primary">Effacer</button>
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>