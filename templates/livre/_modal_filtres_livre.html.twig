<dialog id="modale_filtres">
    <div class="modal-filtres-header">
        <h3>
            Filtres de recherche
            <span id="filter-count-badge" class="filter-count-badge" style="display: none;">0</span>
        </h3>
        <button type="button" class="btn-close-filtres" onclick="fermerModaleFiltres()" aria-label="Fermer">
            âœ•
        </button>
    </div>
    
    <form id="form-filtres" class="modal-filtres-body">
        <div class="filter-grid">
            {# Filtre ISBN #}
            <div class="filter-group">
                <label for="filter-isbn">ISBN</label>
                                <input type="text" id="filter-isbn" name="isbn" placeholder="Rechercher par ISBN..." autocomplete="off">
            </div>
            
            {# Filtre Auteur #}
            <div class="filter-group">
                <label for="filter-auteur">Auteur</label>
                                <input type="text" id="filter-auteur" name="auteur" placeholder="Rechercher par auteur..." autocomplete="off">
            </div>
            
            {# Filtre Titre #}
            <div class="filter-group">
                <label for="filter-titre">Titre</label>
                                <input type="text" id="filter-titre" name="titre" placeholder="Rechercher par titre..." autocomplete="off">
            </div>
            
            {# Filtre Statut (Admin uniquement) #}
            {% if app.session.get('admin_authenticated') %}
                <div class="filter-group">
                    <label for="filter-statut-actif">Statut</label>
                    <select id="filter-statut-actif" name="statut">
                        <option value="">Tous les statuts</option>
                        <option value="actif">Actifs uniquement</option>
                        <option value="inactif">Inactifs uniquement</option>
                    </select>
                </div>
            {% endif %}
            
            {# Filtre Stock Min/Max #}
            <div class="filter-group">
                <label for="stockMin-input">Stock minimum</label>
                <input 
                    type="number" 
                    id="stockMin-input" 
                    name="stockMin" 
                    placeholder="0"
                    min="0"
                    autocomplete="off"
                >
            </div>
            
            <div class="filter-group">
                <label for="stockMax-input">Stock maximum</label>
                <input 
                    type="number" 
                    id="stockMax-input" 
                    name="stockMax" 
                    placeholder="0"
                    min="0"
                    max="100"
                    autocomplete="off"
                >
            </div>
        </div> 

        <hr>
        
        <div class="filter-hint">
            <small>
                <strong>Astuce :</strong> Laissez les champs vides pour afficher tous les livres
            </small>
        </div>
    </form>
    
    <div class="modal-filtres-footer">
        <button type="button" class="btn-effacer-filtres" onclick="reinitialiserFiltres()">
            Effacer les filtres
        </button>
        
        <div class="btn-group">
            <button type="button" class="btn-effacer-filtres" onclick="fermerModaleFiltres()">
                Annuler
            </button>
            <button type="button" class="btn-filtrer" onclick="appliquerFiltres()">
                Appliquer les filtres
            </button>
        </div>
    </div>
</dialog>

{# Affichage des filtres actifs #}
<div id="active-filters-container" class="active-filters"></div>
