{% extends 'base.html.twig' %}

{% block title %}Paramètres Admin{% endblock %}
{% block PageTitle %}Paramètres Admin{% endblock %}

{% block body %}
<div class="container">

    {# Messages de succès/erreur #}
    {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endif %}

    {% if success %}
        <div class="alert alert-success">
            {{ success }}
        </div>
    {% endif %}

    {# Section 1 : Changement du code PIN #}
    <div class="card">
        <h2>Modifier le code PIN</h2>
        <p>Le code PIN actuel est : <code>{{ current_pin }}</code></p>
        
        <form method="post" action="{{ path('app_admin_settings') }}">
            <input type="hidden" name="action" value="change_pin">

            <div class="form-group settings-form-group">
                <label for="current_pin">Code PIN actuel :</label>
                <input 
                    type="password" 
                    id="current_pin" 
                    name="current_pin" 
                    required 
                    class="form-control"
                    placeholder="Entrez le code PIN actuel"
                    pattern="\d{4,}"
                    title="Le PIN doit contenir au moins 4 chiffres"
                >
            </div>

            <div class="form-group settings-form-group">
                <label for="new_pin">Nouveau code PIN :</label>
                <input 
                    type="password" 
                    id="new_pin" 
                    name="new_pin" 
                    required 
                    class="form-control"
                    placeholder="Entrez le nouveau code PIN"
                    pattern="\d{4,}"
                    title="Le PIN doit contenir au moins 4 chiffres"
                    minlength="4"
                >
                <small class="settings-help-text">Le PIN doit contenir au moins 4 chiffres.</small>
            </div>

            <div class="form-group settings-form-group">
                <label for="confirm_pin">Confirmer le nouveau PIN :</label>
                <input 
                    type="password" 
                    id="confirm_pin" 
                    name="confirm_pin" 
                    required 
                    class="form-control"
                    placeholder="Confirmez le nouveau code PIN"
                    pattern="\d{4,}"
                    title="Le PIN doit contenir au moins 4 chiffres"
                    minlength="4"
                >
            </div>

            <button type="submit" class="btn btn-primary">
                Enregistrer le nouveau PIN
            </button>
        </form>
    </div>

    {# Section 2 : Informations système (optionnel) #}
    <div class="card settings-info-card">
        <h2>Informations système</h2>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th >Version Symfony</th>
                    <th >Version PHP</th>
                    <th >Environnement</th>
                    <th >Mode Debug</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</td>
                    <td>{{ constant('PHP_VERSION') }}</td>
                    <td>{{ app.environment }}</td>
                    <td>{{ app.debug ? 'Activé' : 'Désactivé' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {# Section 3 : Actions rapides #}
    <div class="card settings-actions-card">
        <h2>Actions rapides</h2>
        <div class="settings-quick-actions">
            <a href="{{ path('app_livre_index') }}" class="btn btn-info">
                Gérer les livres
            </a>
            <a href="{{ path('app_mouvement_index') }}" class="btn btn-info">
                Voir l'historique
            </a>
            <a href="{{ path('app_admin_logout') }}" class="btn btn-danger">
                Se déconnecter
            </a>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/settings_validation.js') }}"></script>
{% endblock %}
